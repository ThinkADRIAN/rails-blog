<div class="container theme-showcase">
  <h1>Listing Articles</h1>
  <%= link_to 'New article', new_article_path , class: "btn btn-primary btn-sm"%>
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'Show', article_path(article), class: "btn btn-info btn-xs"%>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-default btn-xs" %>
          <%= link_to 'Destroy', article_path(article), class: "btn btn-danger btn-xs",
                          method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>