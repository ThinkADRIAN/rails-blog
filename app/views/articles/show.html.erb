<div class="container theme-showcase">
	<h1>
	  <%= @article.title %>
	</h1>
	 
	<p>
	  <%= @article.text %>
	</p>
	 
	<h3>Comments</h3>
	<%= render @article.comments %>
	 
	<h3>Add a comment:</h3>
	<%= render "comments/form" %>
	 
	<%= link_to 'Edit Article', edit_article_path(@article) %> |
	<%= link_to 'Back to Articles', articles_path %>
</div>